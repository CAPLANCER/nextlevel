Option Explicit

Sub ShowCurrentProcess()
    Dim ws As Worksheet
    Dim lastRow As Long, r As Long
    Dim currentTime As Date
    Dim processName As String
    Dim processTime As Date
    Dim foundProcess As Boolean

    Set ws = ThisWorkbook.Sheets("Sheet1") ' üîÅ Change this to your actual sheet name
    lastRow = ws.Cells(ws.Rows.Count, "C").End(xlUp).Row
    
    currentTime = Time
    foundProcess = False
    
    ' Loop through each process
    For r = 2 To lastRow  ' assuming headers in row 1
        If IsDate(ws.Cells(r, "C").Value) Then
            processTime = TimeValue(ws.Cells(r, "C").Value)
            
            ' Check if current time >= process start time
            If currentTime >= processTime Then
                processName = ws.Cells(r, "A").Value
                foundProcess = True
            End If
        End If
    Next r
    
    If foundProcess Then
        MsgBox "‚è∞ Current running process: " & vbCrLf & vbCrLf & processName, vbInformation, "Process Tracker"
    Else
        MsgBox "No process has started yet for today.", vbExclamation, "Process Tracker"
    End If
End Sub
