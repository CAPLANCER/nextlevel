Option Explicit

Sub ShowCurrentProcess()
    Dim ws As Worksheet
    Dim lastRow As Long, r As Long
    Dim currentTime As Date
    Dim processName As String
    Dim processTime As Date
    Dim foundProcess As Boolean
    
    Set ws = ThisWorkbook.Sheets("Sheet1") ' üîÅ Change sheet name if needed
    lastRow = ws.Cells(ws.Rows.Count, "C").End(xlUp).Row
    
    currentTime = Time
    foundProcess = False
    
    ' Loop through all trigger times in column C
    For r = 2 To lastRow  ' assuming headers in row 1
        If IsDate(ws.Cells(r, "C").Value) Then
            processTime = TimeValue(ws.Cells(r, "C").Value)
            
            ' If process time <= current time, store its name
            If currentTime >= processTime Then
                processName = ws.Cells(r, "A").Value
                foundProcess = True
            End If
        End If
    Next r
    
    If foundProcess Then
        MsgBox "‚è∞ Current running process:" & vbCrLf & _
               processName & vbCrLf & _
               "(Triggered at " & Format(processTime, "h:mm AM/PM") & ")", _
               vbInformation, "Process Tracker"
    Else
        MsgBox "No process has started yet.", vbExclamation, "Process Tracker"
    End If
End Sub
