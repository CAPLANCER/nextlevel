import fitz  # PyMuPDF
import sys
import os

PDF_PATH = "your_document.pdf"
OUTPUT_TEXT_FILE = "ExtractedText.txt"

def extract_text(pdf_path):
    if not os.path.exists(pdf_path):
        print(f"[ERROR] File not found: {pdf_path}")
        sys.exit(1)

    try:
        doc = fitz.open(pdf_path)
    except Exception as e:
        print(f"[ERROR] Could not open PDF: {e}")
        sys.exit(1)

    full_text = ""
    for i, page in enumerate(doc):
        try:
            text = page.get_text("text")
            print(f"\n--- PAGE {i+1} START ---\n")
            print(text)
            print(f"\n--- PAGE {i+1} END ---\n")
            full_text += text + "\n"
        except Exception as e:
            print(f"[WARNING] Failed to extract page {i+1}: {e}")

    doc.close()
    return full_text


if __name__ == "__main__":
    print("[INFO] Extracting text from PDF...")

    extracted_text = extract_text(PDF_PATH)

    # Save to file
    try:
        with open(OUTPUT_TEXT_FILE, "w", encoding="utf-8") as f:
            f.write(extracted_text)

        print(f"\n[SUCCESS] Extracted text saved to: {OUTPUT_TEXT_FILE}")

    except Exception as e:
        print(f"[ERROR] Could not save file: {e}")
