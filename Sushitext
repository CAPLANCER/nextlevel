Sub CopyAndRenameSheet(sourcePath As String, targetPath As String, sourceSheetName As String, newSheetName As String)
    Dim sourceWB As Workbook
    Dim targetWB As Workbook
    Dim ws As Worksheet
    
    '--- open workbooks ---
    Set sourceWB = Workbooks.Open(sourcePath)
    Set targetWB = Workbooks.Open(targetPath)
    
    '--- set worksheet to copy ---
    Set ws = sourceWB.Sheets(sourceSheetName)
    
    '--- copy to target workbook (at the end) ---
    ws.Copy After:=targetWB.Sheets(targetWB.Sheets.Count)
    
    '--- rename the newly copied sheet ---
    targetWB.Sheets(targetWB.Sheets.Count).Name = newSheetName
    
    '--- save & close ---
    targetWB.Save
    sourceWB.Close False
    targetWB.Close False
End Sub
