Sub MoveAndModifySheets(summaryPath As String, SheetName As String, NewSheetName As String)

    Dim wbTarget As Workbook
    Dim wsSource As Worksheet
    Dim wsTarget As Worksheet
    Dim sh As Worksheet
    Dim sheetExists As Boolean
    
    sheetExists = False
    Set wbTarget = ActiveWorkbook
    
    'Open the source workbook
    Set wbSource = Workbooks.Open(summaryPath)
    
    'Check if NewSheetName already exists
    For Each sh In wbTarget.Sheets
        If sh.Name = NewSheetName Then
            sheetExists = True
            Exit For
        End If
    Next sh
    
    'Only copy if the sheet does not already exist
    If Not sheetExists Then
        wbSource.Sheets(SheetName).Copy After:=wbTarget.Sheets(wbTarget.Sheets.Count)
        Set wsTarget = wbTarget.Sheets(wbTarget.Sheets.Count)
        
        'Rename copied sheet
        If wsTarget.Name <> NewSheetName Then
            wsTarget.Name = NewSheetName
        End If
    Else
        MsgBox "Sheet '" & NewSheetName & "' already exists. Skipping copy."
    End If
    
End Sub
