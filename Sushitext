Sub DeleteSheetsWithIndex()
    Dim ws As Worksheet
    Dim sheetName As String
    
    Application.DisplayAlerts = False   ' Turn off alerts (no delete confirmation)
    
    For Each ws In ThisWorkbook.Worksheets
        sheetName = LCase(ws.Name) ' Convert to lowercase for case-insensitive check
        If InStr(sheetName, "index") > 0 Then
            ws.Delete
        End If
    Next ws
    
    Application.DisplayAlerts = True    ' Turn alerts back on
End Sub
