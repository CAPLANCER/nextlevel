Sub WriteAndDragFormulas()
    Dim ws As Worksheet
    Dim lastRow As Long

    Set ws = ActiveSheet
    lastRow = ws.Cells(ws.Rows.Count, 1).End(xlUp).Row

    ' Write formulas in the first row
    ws.Range("A1").Formula = "=B1+C1"
    ws.Range("G1").Formula = "=D1*E1"
    ws.Range("H1").Formula = "=F1/2"

    ' Autofill formulas down to last data row
    ws.Range("A1").AutoFill Destination:=ws.Range("A1:A" & lastRow)
    ws.Range("G1").AutoFill Destination:=ws.Range("G1:G" & lastRow)
    ws.Range("H1").AutoFill Destination:=ws.Range("H1:H" & lastRow)
End Sub
