Public Sub ShowToast(message As String)
    Dim frm As Object
    On Error Resume Next
    Set frm = VBA.UserForms.Add("ToastForm")
    If frm Is Nothing Then
        MsgBox message, vbInformation, "Process Alert"
        Exit Sub
    End If
    frm.Label1.Caption = message
    frm.Show vbModeless
    DoEvents
End Sub
