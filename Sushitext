Sub CloseWorkbookByPath(filePath As String)
    Dim wb As Workbook
    Dim found As Boolean
    found = False
    
    ' Loop through all open workbooks
    For Each wb In Application.Workbooks
        If StrComp(wb.FullName, filePath, vbTextCompare) = 0 Then
            wb.Close SaveChanges:=False   ' Change to True if you want to save before closing
            found = True
            Exit For
        End If
    Next wb
    
    If Not found Then
        MsgBox "Workbook not found: " & filePath, vbExclamation
    End If
End Sub
